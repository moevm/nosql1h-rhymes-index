<!DOCTYPE html>
<html style="background-color: darkgray;" lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>DATABASE PROJECT</title>
    <!-- <script type="text/javascript">
      function disp(myid) {
        document.getElementById(myid).style.display = "block";
      }
    </script> -->
    <style>
      ul {
        display: block;
        margin: 0;
        padding: 0;
        list-style: none;
        background-color: #333;
      }
      ul:after {
        display: block;
        content: " ";
        clear: both;
        float: none;
      }
      ul.menu > li {
        float: left;
        position: relative;
      }
      ul.menu > li > a {
        display: block;
        padding: 10px;
        color: white;
        background-color: #333;
        text-decoration: none;
      }
      ul.menu > li > a:hover {
        background-color: black;
      }

      ul.submenu {
        display: none;
        position: absolute;
        width: 120px;
        top: 37px;
        left: 0;
        background-color: white;
        border: 1px solid #333;
      }
      ul.submenu > li {
        display: block;
      }
      ul.submenu > li > a {
        display: block;
        padding: 10px;
        color: white;
        background-color: #333;
        text-decoration: none;
      }
      ul.submenu > li > a:hover {
        text-decoration: underline;
      }
      ul.menu > li:hover > ul.submenu {
        display: block;
      }

      .active {
        background-color: #4caf50;
      }

      table {
        border: 1px solid grey;
        margin: auto;
      }

      th {
        border: 1px solid grey;
      }

      td {
        border: 1px solid grey;
        text-align: center;
      }
    </style>
  </head>
  <ul class="menu">
    <li>
      <a href="/searchsong">Поиск песни</a>
    </li>
    <li>
      <a href="/create">Добавить песню</a>
    </li>
    <li>
      <a href="/statistic">Статистика</a>
    </li>
    <li class="submenu">
      <a
        ><img
          src="https://image.flaticon.com/icons/png/512/60/60746.png"
          width="16"
          height="16"
      /></a>
      <ul class="submenu">
        <li><a href="#" id="import">IMPORT</a></li>
        <li>
          <input name="file" type="file" id="input-file" /><a
            href="/export"
            target="_blank"
            >EXPORT</a
          >
        </li>
      </ul>
    </li>
  </ul>
  <!-- <button id="export">EXPORT</button> -->
  <body>
    <br />
    <br />
    <input
      style="width: 50%; margin-left: 300px;"
      type="text"
      name="word"
      id="myword"
      placeholder="Введите слово"
    />
    <button id="search" onClick="disp('table')">Искать</button>
    <br />
    <br />
    <table id="table" style="width: 80%; ">
      <tr>
        <th>Автор</th>
        <th>Название песни</th>
        <th>Строка</th>
        <th>More</th>
      </tr>
      <% songs.forEach(function(song){ %>
      <tr>
        <td>
          <%= song.artist %>
        </td>
        <td>
          <%= song.title %>
        </td>
        <td>
          <%= song.string %>
        </td>
        <td>
          <a href="" style="color: blue;">Текст</a>
        </td>
      </tr>
      <% }); %>
    </table>

    <script>
      const query = document.location.search
        .replace(/(^\?)/, "")
        .split("&")
        .map(
          function(n) {
            return (n = n.split("=")), (this[n[0]] = n[1]), this;
          }.bind({})
        )[0];
      if (query["bad-auth"]) {
        $("#bad").css("display", "inline-block");
      }
      $("#import").click(function() {
        $("input[name='file']").click();
      });
      $("input[name='file']").change(function() {
        let fd = new FormData();
        fd.append("json", $(this).prop("files")[0]);
        $.ajax({
          url: "/import",
          data: fd,
          processData: false,
          contentType: false,
          type: "POST",
          success: function() {
            alert("База импортирована");
          }
        });
      });
    </script>
    <script src="../main.js"></script>
  </body>
</html>
